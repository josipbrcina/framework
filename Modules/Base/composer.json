{
  "name": "the-shop/fortytwo-base",
  "description": "Root of 42 framework implementation using the-shop/fortytwo-* packages",
  "license": "MIT",
  "type": "library",
  "homepage": "https://github.com/the-shop/fortytwo-base",
  "authors": [
    {
      "name": "The Shop d.o.o.",
      "homepage": "http://the-shop.io/"
    }
  ],
  "require": {
    "php": "^7.1",
    "mongodb/mongodb": "1.1.2",
    "sentry/sentry": "1.7.1",
    "guzzlehttp/guzzle": "^6.3",
    "sendgrid/sendgrid": "~6.0",
    "firebase/php-jwt": "^5.0",
    "videlalvaro/php-amqplib": "^2.7",
    "aws/aws-sdk-php": "^3.36"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Framework\\Base\\": "src/",
      "Framework\\Base\\Configuration\\": "config/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Framework\\Base\\Test\\": "test/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
